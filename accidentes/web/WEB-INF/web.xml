<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>resource</servlet-name>
        <servlet-class>accidentes.resource</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>resource</servlet-name>
        <url-pattern>/resource</url-pattern>
        <url-pattern>/resource/street</url-pattern>
        <url-pattern>/resource/weather</url-pattern>
        <url-pattern>/resource/lesivity</url-pattern>
        <url-pattern>/resource/accident</url-pattern>
        <url-pattern>/resource/date</url-pattern>
        <url-pattern>/resource/district</url-pattern>
        <url-pattern>/resource/street/*</url-pattern>
        <url-pattern>/resource/weather/*</url-pattern>
        <url-pattern>/resource/lesivity/*</url-pattern>
        <url-pattern>/resource/accident/*</url-pattern>
        <url-pattern>/resource/date/*</url-pattern>
        <url-pattern>/resource/district/*</url-pattern>
    </servlet-mapping>
</web-app>